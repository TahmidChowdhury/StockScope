{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.backend"
  },
  "deploy": {
    "startCommand": "uvicorn backend.api:app --host 0.0.0.0 --port ${PORT:-8000}",
    "healthcheckPath": "/health"
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHONPATH": "/app"
      }
    }
  }
}